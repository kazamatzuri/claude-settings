# Jira Ticket Refinement Skill - Configuration
# Copy this file to .env and fill in your values

# ============================================
# JIRA CONFIGURATION (Required)
# ============================================

# Your Jira Cloud instance URL
JIRA_BASE_URL=https://yourcompany.atlassian.net

# Your Atlassian account email
JIRA_EMAIL=your.email@company.com

# Jira API token (create at https://id.atlassian.com/manage-profile/security/api-tokens)
JIRA_API_TOKEN=your-api-token-here

# Default project key
JIRA_PROJECT_KEY=PROJ

# JQL query to find non-ready tickets
# Customize this for your workflow
JIRA_BACKLOG_JQL="project = PROJ AND labels != 'ready' AND status = Backlog ORDER BY rank ASC"

